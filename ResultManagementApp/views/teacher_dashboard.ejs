<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Result Management Application</title>
</head>
<body>
    <nav class="navbar">
        <div class="container-fluid">
            Result Management System  
        </div>
    </nav>
    <div>
        <a href="/" class="btn btn-info" style="margin-top:20px;">Back</a>
        <a href="/teacher/add" class="btn btn-primary" style="float: right; margin-top: 20px;">Add Record</a>
        <h2>All Students</h2>
        <% if(error.length > 0) { %>
               <p><%= error %></p> 
        <% } %> 
        <% if(success.length > 0) { %>
            <p><%= success %></p> 
     <% } %> 
        <div class="teacher_table_div">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Roll Number</th>
                        <th scope="col">Name</th>       
                        <th scope="col">Date of Birth</th>
                        <th scope="col">Marks</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <%  students.forEach(student => { %>
                        <tr class="head">
                            <td><%= student.roll_number %></td>
                            <td><%= student.name %></td>               
                            <td><%= student.date_of_birth %></td>
                            <td><%= student.marks %></td> 
                            <td>
                                <a href="/teacher/edit/<%= student.id %> ">✏️</a>
                                <a href="/teacher/delete/<%= student.id %> ">❌</a>
                            </td>
                        </tr>
                    <%}) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

